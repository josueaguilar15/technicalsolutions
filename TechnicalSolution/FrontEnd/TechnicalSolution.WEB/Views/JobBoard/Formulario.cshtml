@using TechnicalSolution.EL;

@model TechnicalSolution.EL.JobBoard
    
<form asp-action="EjecutarTransaccion" autocomplete="off">
    @Html.HiddenFor(e => e.Id)
    @Html.HiddenFor(e => e.CreatedAt)
    @Html.Hidden("tipoTransaccion", ViewData["Action"])
    <div class="card">
        <div class="card-header">
            <h5 style="text-align:center;">@ViewData["Action"]</h5>
        </div>
        <div class="card-body" id="cardBody">
            <div class="form-row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(e => e.Job)
                    @Html.TextBoxFor(e => e.Job, new { @class = "form-control", maxlength = "50", @required = "true" })
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(e => e.JobTitle)
                    @Html.TextBoxFor(e => e.JobTitle, new { @class = "form-control", maxlength = "50", @required = "true" })
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(e => e.Description)
                    @Html.TextBoxFor(e => e.Description, new { @class = "form-control", maxlength = "50", @required = "true" })
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(e => e.ExpiresAt)
                    @Html.TextBoxFor(e => e.ExpiresAt, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date", @required = "true" })
                </div>
            </div>
        </div>
        <div class="card-footer text-right">
            <button type="submit" class="btn btn-outline-primary">Save</button>
            <a class="btn btn-outline-primary" asp-action="Index">Back to List</a>
        </div>
    </div>
</form>
